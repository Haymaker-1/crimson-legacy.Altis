clear 
close all
clc


sampleRate = 8000;                        % Hz
sampleDuration = 10.0;                     % sound sample duration is 5 seconds
sampleLength = sampleDuration*sampleRate; % array size;
nBits = 16;
filename = 'my-alarm.wav';
waveLength = 1/2000;



t = linspace(0,sampleDuration,sampleLength);
y = 0.99*sin(t*(2*pi/waveLength))




plot(t,y)

wavwrite(y,sampleRate,nBits,filename);
